@model List<SqlSearchQuery.Models.Entities.Company>
@{
    ViewData["Title"] = "Garbage Page";
    int i = 1;
}
<div class="text-center">

    <h2>Çöp Kutusu</h2>
    <br>

    <table class="table table-dark">
        <thead>
            <tr>
                <th>#</th>
                <th>Id</th>
                <th>Şirket Adı</th>
                <th>Şirket Türü</th>
                <th>Vergi No</th>
                <th>Silinme Tarihi</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var company in Model)
            {
                <tr>
                    <td>@i</td>
                    <td>@company.CompanyId</td>
                    <td>@company.CompanyName</td>
                    <td>@company.Segment</td>
                    <td>@company.TaxNo</td>
                    <td>@company.DeleteTime.ToString()</td>
                    <td><a class="btn btn-danger" href="/Home/outGarbage/@company.CompanyId">Çöp Kutusundan Çıkar</a></td>
                </tr>
                i++;
            }
        </tbody>
    </table>

</div>
