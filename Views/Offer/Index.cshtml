@model SqlSearchQuery.Models.Entities.Offer
@{
    ViewData["Title"] = "Offer Page";
}

<div class="text-center">
    <h2>Şirkete Teklif Ver</h2>

    <div class="badge text-black text-wrap p-3" style="width: 18rem;">
        <p><strong>Şirket Adı:</strong> @ViewBag.companyName</p>
        <p><strong>E-mail:</strong> @ViewBag.companyEmail</p>
    </div>

    <div class="mt-4">
        <form method="post" asp-action="OfferPost" asp-controller="Offer" class="mx-auto" style="width: 60%;">
            <input type="hidden" asp-for="OfferId">
            <input type="hidden" asp-for="CompanyId" value="@ViewBag.companyId">
            <input type="hidden" asp-for="OfferTime" value="@ViewBag.OfferTime">
            <input type="hidden" asp-for="CompanyEmail" value="@ViewBag.companyEmail">
            <input type="hidden" asp-for="CompanyName" value="@ViewBag.companyName">

            <div class="form-group mb-3 d-flex align-items-center">
                <label for="NameSurname" class="form-label me-3" style="width: 150px;">Ad Soyadı:</label>
                <input type="text" asp-for="NameSurname" class="form-control"
                    placeholder="Adınızı ve Soyadınızı Giriniz..." required>
            </div>

            <div class="form-group mb-3 d-flex align-items-center">
                <label for="Email" class="form-label me-3" style="width: 150px;">E-Posta:</label>
                <input type="email" asp-for="Email" class="form-control" placeholder="E-Postanızı Giriniz..." required>
            </div>

            <div class="form-group mb-3 d-flex align-items-center">
                <label for="JobTittle" class="form-label me-3" style="width: 150px;">İş Başlığı:</label>
                <input type="text" asp-for="JobTittle" class="form-control" placeholder="İş Başlığını Giriniz..."
                    required>
            </div>

            <div class="form-group mb-3 d-flex align-items-start">
                <label for="JobComment" class="form-label me-3" style="width: 150px;">İş Açıklaması:</label>
                <textarea class="form-control" asp-for="JobComment" rows="4" placeholder="İş detaylarını girin"
                    required></textarea>
            </div>

            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary btn-block" href="/Offer/OfferPost/">Teklif Gönder</button>
            </div>
        </form>
    </div>
</div>
